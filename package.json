{
  "name": "cog-app",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "python:build": "python -m pip install pyinstaller && pyinstaller --onefile --distpath ./dist ./src/python/server.py",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "start:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "start": "npm run build:renderer && electron ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.3",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "build": {
    "appId": "com.soundmind.cog-app",
    "productName": "Cog App",
    "files": [
      "dist/**/*",
      "src/**/*",
      "main.js"
    ],
    "extraResources": [
      {
        "from": "dist/server.exe",
        "to": "server.exe",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
