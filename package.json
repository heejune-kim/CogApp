{
  "name": "cog-app",
  "version": "1.0.0",
  "description": "Cog App - AI-powered desktop application",
  "main": "main.js",
  "scripts": {
    "__python:build": "python -m pip install pyinstaller && pyinstaller --distpath ./dist server.spec",
    "test": "echo \"Error: no test specified\" && exit 1",
    "_XXX_build:renderer_force": "taskkill /IM server.exe /F && webpack --config webpack.renderer.config.js",
    "build:main": "webpack --config webpack.main.config.js",
    "build:preload": "webpack --config webpack.preload.config.js",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "__build": "npm run python:build && npm run build:main && npm run build:preload && npm run build:renderer",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "_XXX_build:preload": "tsc src/preload.ts --outDir dist --esModuleInterop --lib DOM,ESNext --module commonjs --target ES2020",
    "start:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "start": "npm run build && electron ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "autoprefixer": "^10.4.21",
    "css-loader": "^7.1.2",
    "electron": "^37.2.4",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.6.3",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "react-router-dom": "6",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.13",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "lucide-react": "^0.541.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "build": {
    "appId": "com.soundmind.cog-app",
    "productName": "Cog App",
    "files": [
      "dist/**/*",
      "src/**/*",
      "main.js"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
